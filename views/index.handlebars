<body id="main">
    <nav class="navbar navbar-light bg-light">
        <a id="navBarTitle" class="navbar-brand" href="#">Blackjack</a>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-12">


                <div id="mainCard" class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Dealer's Cards</h6>
                        {{!!--dynamically create cards based on how many have been played during the hand}}
                        <div id="cardPlacement" class="row">
                            {{!-- {{#each cards}} {{#if this.played}} --}}
                            <div id="dealerCardOne" class="customCard">

                                <img src="pics/sa.png">

                            </div>
                            <div id="dealerCardTwo" class="customCard">

                                <img src="pics/blank.png">

                            </div>

                        </div>
                        <br> {{!-- {{/each}} {{/if}} --}} {{!! dynamically create players cards by how many have been played
                        in the hand}} {{!-- {{!! {{!-- {{#each cards}} {{#if this.played}} --}}
                        <div class="row">
                            <div class="col-md-12">
                                <h6 class="card-subtitle mb-2 text-muted">Your Cards</h6>
                            </div>
                        </div>
                        <div id="cardPlacement" class="row">
                            <div id="playersCard" class="customCard">
                                <img src="pics/sa.png">
                            </div>
                            <div id="playersCard" class="customCard">
                                <img src="pics/blank.png">
                            </div>

                        </div>

                        <div class="row">
                            {{#each gameData}}
                            <pre>{{this.name}} {{this.icon}} {{this.total_credits}} </pre> {{/each}}
                        </div>


                    </div>
                    <div id="sideButtons" class="col-md-2">
                        <div class="row">
                            <button id="addMoney" class="btn btn-success forceWidth"> Add $</button>
                        </div>
                        <div class="row">
                            <button id="cashOut" class="btn btn-danger forceWidth">Cash Out</button>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

</body>